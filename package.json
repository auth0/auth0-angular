{
  "name": "auth0-angular",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:local": "concurrently --raw --kill-others --success first npm:start:local:oidc npm:start:local:playground",
    "start:local:oidc": "node scripts/oidc-provider",
    "start:local:playground": "ng serve --configuration=local",
    "prebuild": "npm run update-useragent",
    "build:dev": "ng build auth0-angular && npm run build:schematics",
    "build": "ng build auth0-angular --configuration=production && npm run build:schematics",
    "build:schematics": "npm run build --prefix projects/auth0-angular",
    "postbuild": "cp README.md ./dist/auth0-angular/",
    "test": "jest",
    "test:ci": "jest --coverage --silent",
    "e2e": "ng e2e",
    "e2e:headless": "ng e2e --no-watch --headless",
    "e2e:ci": "concurrently --raw --kill-others --success first npm:start:local:oidc npm:e2e:headless",
    "lint": "ng lint",
    "docs": "typedoc",
    "pretty-quick": "pretty-quick",
    "update-useragent": "node projects/auth0-angular/scripts/update-useragent.js",
    "server:api": "node api-server.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.13",
    "@angular/common": "^18.2.13",
    "@angular/compiler": "^18.2.13",
    "@angular/core": "^18.2.13",
    "@angular/platform-browser": "^18.2.13",
    "@angular/platform-browser-dynamic": "^18.2.13",
    "@angular/router": "^18.2.13",
    "@auth0/auth0-spa-js": "^2.1.3",
    "rxjs": "^6.6.7",
    "tslib": "^2.8.1",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.20",
    "@angular-eslint/builder": "18.4.3",
    "@angular-eslint/eslint-plugin": "18.4.3",
    "@angular-eslint/eslint-plugin-template": "18.4.3",
    "@angular-eslint/schematics": "18.4.3",
    "@angular-eslint/template-parser": "18.4.3",
    "@angular/cli": "^18.2.20",
    "@angular/compiler-cli": "^18.2.13",
    "@angular/forms": "^18.2.13",
    "@cypress/schematic": "^2.4.0",
    "@types/jasmine": "^3.10.18",
    "@types/jasminewd2": "~2.0.13",
    "@types/jest": "^29.2.2",
    "@types/node": "^12.19.8",
    "@typescript-eslint/eslint-plugin": "8.34.1",
    "@typescript-eslint/parser": "8.34.1",
    "browserstack-cypress-cli": "^1.32.8",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "cypress": "^13.17.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "latest",
    "eslint-plugin-jsdoc": "latest",
    "eslint-plugin-prefer-arrow": "latest",
    "express-jwt": "^8.4.1",
    "husky": "^4.3.8",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.6.0",
    "jwks-rsa": "^3.1.0",
    "moment": "^2.30.1",
    "ng-packagr": "^18.2.1",
    "oidc-provider": "^7.6.0",
    "prettier": "^2.8.8",
    "pretty-quick": "^2.0.2",
    "protractor": "~7.0.0",
    "ts-node": "~8.10.2",
    "typedoc": "^0.28.8",
    "typescript": "~5.4.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
