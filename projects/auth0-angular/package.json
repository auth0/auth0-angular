  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/auth0/auth0-angular/issues"
  },
  "homepage": "https://github.com/auth0/auth0-angular#readme",
  "peerDependencies": {
    "@angular/common": ">=13",
    "@angular/core": ">=13",
    "@angular/router": ">=13"
  },
  "dependencies": {
    "tslib": "^2.0.0",
    "@auth0/auth0-spa-js": "^2.0.1"
  },
  "schematics": "./schematics/collection.json"
